{
    "name": "openeuropa/oe_content_extra",
    "description": "OpenEuropa Drupal module that adds additional fields and structure to content types from oe_content.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "drupal/core": "^9.3"
    },
    "require-dev": {
        "composer/installers": "^2.0",
        "drupal/address": "^1.10",
        "drupal/composite_reference": "^2.1",
        "drupal/config_devel": "^1.8",
        "drupal/core-composer-scaffold": "^9.3",
        "drupal/core-dev": "^9.3",
        "drupal/description_list_field": "^1.0@alpha",
        "drupal/entity_reference_revisions": "^1.9",
        "drupal/field_group": "^3.2",
        "drupal/typed_link": "^2.0",
        "drush/drush": "^11.1",
        "openeuropa/code-review": "^2.0.0-alpha6",
        "openeuropa/oe_content": "^3.0.0-alpha8",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0.0-beta6",
        "phpspec/prophecy-phpunit": "^2"
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "autoload": {
        "psr-4": {
            "Drupal\\oe_content_extra\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_content_extra\\": "./tests/src"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./build"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "phpro/grumphp": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
